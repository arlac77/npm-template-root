{
  "template": {
    "usedBy": [
      "arlac77/profile",
      "arlac77/template-kronos-app",
      "arlac77/template-kronos-component",
      "arlac77/template-node-app",
      "arlac77/template-web-app",
      "arlac77/temlate-web-component",
      "arlac77/template-xslt"
    ],
    "mergers": [
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "License",
              "icon": "https://img.shields.io/badge/License-BSD%203--Clause-blue.svg",
              "url": "https://opensource.org/licenses/BSD-3-Clause",
              "order": 0.11
            }
          ]
        }
      },
      {
        "type": "License",
        "pattern": "LICENSE"
      },
      {
        "type": "MergeLineSet",
        "pattern": ".gitignore",
        "options": {
          "messagePrefix": "chore(git): ",
          "ignore": [
            ""
          ]
        }
      },
      {
        "type": "ReplaceIfEmpty",
        "pattern": "**/*"
      }
    ]
  }
}